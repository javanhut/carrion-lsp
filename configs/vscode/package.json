{
  "name": "carrion-language-support",
  "displayName": "Carrion Language Support",
  "description": "Language support for the Carrion programming language",
  "version": "1.0.0",
  "publisher": "carrion-lang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/javanhut/carrion-lsp.git"
  },
  "bugs": {
    "url": "https://github.com/javanhut/carrion-lsp/issues"
  },
  "homepage": "https://github.com/javanhut/carrion-lsp#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Language Packs",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "carrion",
    "language-server",
    "lsp",
    "programming-language",
    "syntax-highlighting",
    "autocomplete",
    "intellisense"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:carrion"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "carrion",
        "aliases": [
          "Carrion",
          "carrion"
        ],
        "extensions": [
          ".crl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/carrion-light.svg",
          "dark": "./icons/carrion-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "carrion",
        "scopeName": "source.carrion",
        "path": "./syntaxes/carrion.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Carrion Language Server",
      "properties": {
        "carrion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Carrion language server"
        },
        "carrion.serverPath": {
          "type": "string",
          "default": "carrion-lsp",
          "description": "Path to the Carrion language server executable"
        },
        "carrion.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Carrion language server"
        },
        "carrion.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic features (linting)"
        },
        "carrion.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion"
        },
        "carrion.completion.memberAccess": {
          "type": "boolean",
          "default": true,
          "description": "Enable member access completion (obj.method)"
        },
        "carrion.formatting.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable code formatting"
        },
        "carrion.formatting.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format code automatically on save"
        },
        "carrion.formatting.formatOnType": {
          "type": "boolean",
          "default": false,
          "description": "Format code automatically while typing"
        }
      }
    },
    "commands": [
      {
        "command": "carrion.restartServer",
        "title": "Restart Language Server",
        "category": "Carrion"
      },
      {
        "command": "carrion.showOutputChannel",
        "title": "Show Output Channel",
        "category": "Carrion"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "carrion.restartServer",
          "when": "editorLangId == carrion"
        },
        {
          "command": "carrion.showOutputChannel",
          "when": "editorLangId == carrion"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}